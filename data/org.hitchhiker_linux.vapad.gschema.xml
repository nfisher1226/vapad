<?xml version="1.0" encoding="UTF-8"?>
<schemalist gettext-domain="vapad">
  <schema id="org.hitchhiker_linux.vapad" path="/org/hitchhiker_linux/vapad/">
    <key name="vimode" type="b">
      <default>false</default>
      <summary>Use Vim emulation</summary>
      <description>Whether to use Vim emulation</description>
    </key>
    <key name="grid" type="b">
      <default>false</default>
      <summary>Display a background grid pattern</summary>
    </key>
    <key name="syntax" type="s">
      <default>'Adwaita'</default>
      <summary>Syntax highlighting theme</summary>
      <description>Which syntax highlighting theme to use in the editor</description>
    </key>
    <key name="font" type="s">
      <default>'Sans Mono 10'</default>
      <summary>Editor font description</summary>
      <description>Description of the font to use in each  editor instance</description>
    </key>
    <key name="theme" type="s">
      <choices>
        <choice value='default'/>
        <choice value='force-light'/>
        <choice value='force-dark'/>
      </choices>
      <default>'default'</default>
      <summary>The application theme to use</summary>
    </key>
  </schema>
</schemalist>
